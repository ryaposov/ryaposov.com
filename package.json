{
  "name": "ryaposov",
  "version": "1.0.0",
  "description": "Blog and Portfolio",
  "author": "Pavel Ryaposov",
  "private": true,
  "scripts": {
    "dev": "nuxt --port=3002",
    "build": "cross-env ACTION=build nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "deploy": "cross-env ACTION=build npm run build && gcloud app deploy staging.yaml --project ryaposov",
    "deploy-prod": "cross-env ACTION=build npm run build && gcloud app deploy production.yaml --project ryaposov",
    "lerna": "lerna bootstrap --hoist --nohoist=@ryaposov/* --concurrency=1"
  },
  "dependencies": {
    "@nuxt/http": "^0.5.12",
    "@nuxtjs/prismic": "^1.2.4",
    "@nuxtjs/proxy": "^2.0.1",
    "@nuxtjs/pwa": "^3.0.2",
    "blotter.js": "git+https://github.com/bradley/Blotter.git",
    "dayjs": "^1.8.36",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "mobile-detect": "^1.4.4",
    "nuxt": "^2.15.3",
    "nuxt-client-init-module": "^0.1.9",
    "nuxt-ssr-cache": "^1.5.2",
    "prismic-vue": "^2.0.1",
    "vue-blotter": "^0.1.3",
    "vue-code-highlight": "^0.7.6",
    "web-streams-polyfill": "^3.0.0"
  },
  "devDependencies": {
    "@ryaposov/tokens": "^0.0.1",
    "@ryaposov/essentials": "^0.0.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-async-to-generator": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@nuxt/postcss8": "^1.1.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-mix-import-module-exports": "^0.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-vue": "^7.0.0-alpha.0",
    "nodemon": "^2.0.4",
    "nuxt-purgecss": "^1.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^5.0.6",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-each": "^0.10.0",
    "postcss-preset-env": "^7.4.2",
    "postcss-pxtorem": "^6.0.0",
    "tailwindcss-theming": "^2.4.3",
		"tailwindcss": "^3.0.23"
  }
